%table.table
  - (0..(@users.size/2)-1).each do |index|
    %thead
      %tr
        %th= "#{index+1} "+ t('users.output')
    %tbody
      %tr
        %td
          = @users[index].firstName
          = @users[index].secondName
      %tr
        %td
          = @users[index+@users.size/2].firstName
          = @users[index+@users.size/2].secondName
= link_to t('users.generate'), generate_pairs_users_path, class: 'btn btn-primary', data: {turbolinks: false}
= content_for(:title, t('title.generator')) 
