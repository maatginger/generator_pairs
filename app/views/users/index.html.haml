%h1 All Users
%table.table
  %thead
    %tr
      %th First Name
      %th Second Name
  %tbody
    - @users.each do |user|
      %tr
        %td
          = user.firstName
        %td
          = user.secondName
        %td{:align => "right"}
          = link_to 'Edit', edit_user_path(user), class: "btn btn-default"
        %td
          = link_to 'Destroy', user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: 'Are your sure?'}
= link_to 'New User', new_user_path, class: "btn btn-primary"
